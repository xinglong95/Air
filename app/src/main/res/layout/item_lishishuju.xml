<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/kuang_lishi"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal"
        android:paddingRight="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:drawableLeft="@drawable/icon_guzhang_cxtj"
            android:layout_marginLeft="10dp"
            android:text="查询条件"
            android:textColor="#328FC1"
            android:textSize="13sp"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:drawablePadding="5dp"
            />
        <TextView
            android:id="@+id/tv_chaxuntiaojian"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="#328FC1"
            android:textSize="13sp"
            android:text="室内温度"
            android:gravity="center_vertical"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/kuang_lishi"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal"
        android:paddingRight="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableLeft="@drawable/icon_guzhang_cxtj"
            android:layout_marginLeft="10dp"
            android:text="时间段"
            android:textColor="#328FC1"
            android:textSize="13sp"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:drawablePadding="5dp"
            />
        <TextView
            android:id="@+id/tv_kaishishijian"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="#328FC1"
            android:textSize="13sp"
            android:text="2018-01-22"
            android:gravity="center_vertical"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="#328FC1"
            android:textSize="13sp"
            android:text="至"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:id="@+id/tv_jieshushijian"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="#328FC1"
            android:textSize="13sp"
            android:text="2018-01-22"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            />
    </LinearLayout>
    <Button
        android:id="@+id/btn_chaxun"
        android:layout_width="65dp"
        android:layout_height="30dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/btn_guzhang_chaxun" />
    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/linechat_lishi"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        >

    </com.github.mikephil.charting.charts.LineChart>
</LinearLayout>