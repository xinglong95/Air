<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/kuang_xx"
    android:padding="10dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/icon_xx_xinghao"
            android:textSize="15sp"
            android:textColor="#7C92FF"
            android:text="空调信息"
            android:drawablePadding="5dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        >
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="制冷量"
            android:textColor="#1db6f1"
            android:gravity="center"
            android:layout_centerInParent="true"
            />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="制热量"
                android:textColor="#f3ff39"
                android:gravity="center"
                android:layout_centerInParent="true"
                android:drawableLeft="@drawable/icon_xx_zhire"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="功率"
                android:textColor="#1BFF8C"
                android:gravity="center"
                android:layout_centerInParent="true"
                android:drawableLeft="@drawable/icon_xx_gonglv"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="大小"
                android:textColor="#F52828"
                android:gravity="center"
                android:layout_centerInParent="true"
                android:drawableLeft="@drawable/icon_xx_daxiao"
                />
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/tv_zhilengliang"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="制冷量"
            android:textColor="@color/white"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/tv_zhireliang"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="制热量"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/tv_gonglv"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="功率"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/tv_daxiao"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="大小"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:gravity="center"
            />
    </LinearLayout>
</LinearLayout>