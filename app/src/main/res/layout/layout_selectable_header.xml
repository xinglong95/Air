<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    >
    <LinearLayout
        android:id="@+id/line_zuichangxian"
        android:layout_marginLeft="10dp"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
    <TextView
        android:layout_weight="1"
        android:background="#1c3763"
        android:layout_width="1dp"
        android:layout_height="0dp" />
    <TextView
        android:layout_weight="1"
        android:background="#1c3763"
        android:layout_width="1dp"
        android:layout_height="0dp" />
    </LinearLayout>

    <RelativeLayout
        android:paddingLeft="39dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">
    <TextView
        android:layout_weight="1"
        android:background="#1c3763"
        android:layout_width="1dp"
        android:layout_height="0dp" />
    <TextView
        android:id="@+id/tv_diergenxia"
        android:layout_weight="1"
        android:background="#1c3763"
        android:layout_width="1dp"
        android:layout_height="0dp" />
</LinearLayout>
    <TextView
        android:id="@+id/tv_zuoheng"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_alignParentLeft="true"
        android:layout_width="30dp"
        android:layout_height="1dp"
        android:background="#1c3763"
        />
    <CheckBox
        android:button="@drawable/checkbox_xiangmuxuanzhogn"
        android:layout_toRightOf="@+id/tv_zuoheng"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/cb_xuanze"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TextView
        android:layout_marginLeft="10dp"
        android:paddingLeft="20dp"
        android:background="@drawable/bg_sanjixuanzekuang"
        android:textColor="@color/white"
        android:id="@+id/tv_itemvalue"
        android:gravity="center_vertical|left"
        android:text="DKE-432483"
        android:drawablePadding="10dp"
        android:drawableLeft="@drawable/icon_xiangmu_x"
        android:layout_toRightOf="@+id/cb_xuanze"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_width="240dp"
        android:layout_height="25dp" />
    </RelativeLayout>
</RelativeLayout>
